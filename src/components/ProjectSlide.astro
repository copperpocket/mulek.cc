---
import ProjectCard from "@/components/ProjectCard.astro";

interface Props {
  title: string;
  description: string;
  image: string;
  slug: string;
  tags?: string[];
  category?: string;
  url?: string;
  github?: string;
}

const { title, description, image, slug, tags = [], category = "Project", url, github } = Astro.props;
---

<!-- Each slide must not shrink so the flex layout scrolls correctly -->
<div class="flex-shrink-0 w-full px-2">
  <ProjectCard
    {...({
      title,
      description,
      tags,
      category,
      slug,
      image,
      url,
      github
    } as any)}
  />

</div>
