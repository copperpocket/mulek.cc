// src/components/Hamburger.astro
---
<input class="menu-btn hidden" type="checkbox" id="menu-btn" />
<label
  class="menu-icon cursor-pointer flex justify-center items-center relative select-none visible
         h-10 w-8 xtall:w-10
         [--bar-gap:10px] xtall:[--bar-gap:12px]" 
  for="menu-btn"
>
  <span
    class="navicon block relative transition-[background] duration-200 ease-out
           bg-current text-neutral-800 dark:text-neutral-200
           w-7/8 h-[3px] xtall:h-1 rounded-full"
  />
</label>

<style>
  .menu-btn {
    display: none;
  }

  .menu-icon {
    grid-area: hamburger;
  }

  .navicon {
    transition-duration: 0.2s;
    transition-timing-function: ease-out;
  }

  /* --- Pseudo-elements use the variable for spacing --- */
  .navicon::before,
  .navicon::after {
    background: currentColor;
    content: '';
    position: absolute;
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 9999px;
    transition: transform 0.2s ease-out;
  }

  .navicon::before {
    top: calc(-1 * var(--bar-gap, 10px));
  }

  .navicon::after {
    top: var(--bar-gap, 10px);
  }

  /* --- Animation states (when checked) --- */
  .menu-btn:checked ~ .menu-icon .navicon {
    background: transparent;
  }

  .menu-btn:checked ~ .menu-icon .navicon::before {
    top: 0;
    transform: rotate(-45deg);
  }

  .menu-btn:checked ~ .menu-icon .navicon::after {
    top: 0;
    transform: rotate(45deg);
  }
</style>
